-- Load Rayfield UI
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Create UI window
local Window = Rayfield:CreateWindow({
    Name = "Pet Spawner",
    LoadingTitle = "Rayfield Pet Spawner",
    LoadingSubtitle = "by TDLXxJINxX",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "RayfieldConfigs",
        FileName = "PetSpawnerConfig"
    },
    Discord = { Enabled = false },
    KeySystem = false
})

-- Tab for Pets
local PetTab = Window:CreateTab("Pets", 4483362458)

-- Define pets and their asset IDs
local pets = {
    ["Dog"] = "rbxassetid://123456789",     -- Replace with real asset ID
    ["Cat"] = "rbxassetid://987654321",
    ["Dragon"] = "rbxassetid://1122334455"
}

-- Dropdown to select and spawn a pet
PetTab:CreateDropdown({
    Name = "Choose a Pet to Spawn",
    Options = {"Dog", "Cat", "Dragon"},
    CurrentOption = "Dog",
    Callback = function(selected)
        local assetId = pets[selected]
        if assetId then
            local pet = game:GetService("InsertService"):LoadAsset(assetId)
            local model = pet:GetChildren()[1]
            model.Parent = workspace
            local player = game.Players.LocalPlayer
            if model:IsA("Model") and model:FindFirstChild("HumanoidRootPart") then
                model:SetPrimaryPartCFrame(player.Character.HumanoidRootPart.CFrame * CFrame.new(2, 0, 2))
            end
        end
    end,
})

Rayfield:LoadConfiguration()
